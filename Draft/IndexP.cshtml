@model IEnumerable<ASP.NET_MVC_Assignments.Models.PersonsModel>

@{
    ViewData["Title"] = "Peoples";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h1>Peoples</h1>
<div class="container-fluid ">
    <form class="d-flex" asp-action="Filter" asp-controller="Persons">
        <input class="form-control me-2" type="search" name="filter" placeholder="Filter" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Filter</button>
    </form>
</div>

<p>
    <a asp-action="Create">Add New</a>
    <br />
    
</p>
<table class=" table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
   
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Filter", "Filter", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }


    </tbody>
</table>
